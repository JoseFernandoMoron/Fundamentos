#include "stdafx.h"
#include "conio.h"
#include <iostream>
#define MAX 100

using namespace std;

void main(){
	int n,d,l;
	int cnt=0;
int V[MAX];
int A[MAX];
int i=0, m;
int f=0;
cout<<"ingrese la cantidad maxima del vector"<<endl;
cin>>n;
cout<<"ingrese el valor de cada elemento"<<endl;

for(int i=0;i<n;i++){
	cin>>V[i];
	}
m=n-1;

cout<<"cargando"<<m<<endl;
for(int j=0;j<n;j++){
	A[j]=V[m];
	m=m-1;}

cout<<"el vector invertido es"<<endl;
for(int f=0;f<n;f++){
	cout<<A[f]<<endl;}
for(int i=0;i<n;i++){
if(V[i]==A[i]){
	cnt++;}}
if(n==cnt){
	cout<<"es capicua"<<endl;}
else{
	cout<<"no es capicua"<<endl;}
	
	
getch();}
