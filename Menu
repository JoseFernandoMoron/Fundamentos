#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
using namespace std;
void main(){
	int a,b,r,opcion;
	cout<<"ingrese a y b"<<endl;
	cin>>a>>b;
	 do{
		 cout<<"1.suma"<<endl;
		 cout<<"2.resta"<<endl;
		 cout<<"3.multiplicacion"<<endl;
		 cout<<"4.Division"<<endl;
		 cout<<"5.salir"<<endl;
		 cout<<"elige una opcion"<<endl;
		 cin>>opcion;
		 switch (opcion){
		  case 1 : r=a+b ; break;
		  case 2 : r=a-b ; break;
		  case 3 : r=a*b ; break;
		  case 4 : r=a/b ; break;
		  case 5 : cout<<"salir"<<endl; break;
		  default: cout<< "opcion invalida"<<endl;
		 }
		 if((opcion>=1)&&(opcion<=4))
			 cout<<"el resultado es: "<< r <<endl;
			 getch();
			 system("cls");
	 } while (opcion!=0);
	 getch();
	 }
